{
  "name": "caronsale-coding-challenge-backend",
  "version": "1.0.0",
  "description": "CarOnSale Backend Coding Challenge",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npx ts-node src/app/main.ts",
    "test": "./node_modules/.bin/mocha --require ts-node/register ./src/**/*.spec.ts",
    "prepare": "cd ../.. && husky install challenges/backend/.husky",
    "format-lint": "prettier --config .prettierrc -l --ignore-unknown .",
    "format-fix": "prettier --config .prettierrc --write --ignore-unknown .",
    "lint": "eslint --max-warnings 0 . && npm run tsc",
    "lint-fix": "eslint --fix .",
    "tsc": "tsc --noEmit",
    "lint-staged-husky": "lint-staged"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/config": "^3.3.0",
    "@types/inversify": "^2.0.33",
    "@types/node": "^18.16.1",
    "axios": "^1.4.0",
    "config": "^3.3.9",
    "inversify": "^6.0.1",
    "mocha": "^10.2.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3"
  }
}
